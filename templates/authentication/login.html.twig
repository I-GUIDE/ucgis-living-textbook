{% extends 'single_column.html.twig' %}

{% block content %}
  <div class="row justify-content-center mt-3">
    <div class="col-12 col-sm-8 col-md-6 col-xl-4">
      <div class="card">
        <h1 class="card-header">{{ 'login.login'|trans|capitalize }}</h1>
        <div class="card-body">
          <p class="card-text">{{ 'login.login-text'|trans }}</p>
          {{ form(form) }}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
