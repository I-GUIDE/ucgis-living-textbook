{% extends 'single_column.html.twig' %}

{% block before_title %}
  {% if is_granted('STUDYAREA_OWNER', studyArea) %}
    {% import '_macro/_action_buttons.html.twig' as buttons %}
    {{ buttons.header() }}
    {{ buttons.add_button(path('app_relationtype_add'), _twigStudyArea.isFrozen ? 'study-area.frozen'|trans : '') }}
    {{ buttons.footer() }}
  {% endif %}
{% endblock %}

{% block title %}
  {{ 'relation-type.list-title'|trans }}
{% endblock %}

{% block content %}
  {% import '_macro/_action_buttons.html.twig' as buttons %}
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th scope="col">{{ 'relation-type.name'|trans }}</th>
        {% if is_granted('STUDYAREA_OWNER', studyArea) %}
          <th scope="col" class="actions">{{ 'form.actions'|trans }}</th>
        {% endif %}
      </tr>
      </thead>
      <tbody>
      {% for relationType in relationTypes %}
        <tr>
          <td>{{ relationType.name }}</td>
          {% if is_granted('STUDYAREA_OWNER', studyArea) %}
            <td class="actions">
              {{ buttons.edit_button_disabled_when_frozen(path('app_relationtype_edit', {'relationType': relationType.id})) }}
              {{ buttons.remove_button_disabled_when_frozen(path('app_relationtype_remove', {'relationType': relationType.id})) }}
            </td>
          {% endif %}
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
