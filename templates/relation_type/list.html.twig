{% extends 'single_column.html.twig' %}

{% block before_title %}
  {% if is_granted('STUDYAREA_OWNER', studyArea) %}
    {% import '_macro/_action_buttons.html.twig' as buttons %}
    {{ buttons.header() }}
    {{ buttons.add_button(path('app_relationtype_add'), _twigStudyArea.isFrozen, 'study-area.frozen'|trans) }}
    {{ buttons.footer() }}
  {% endif %}
{% endblock %}

{% block title %}
  {{ 'relation-type.list-title'|trans }}
{% endblock %}

{% block content %}
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th scope="col">{{ 'relation-type.name'|trans }}</th>
        {% if is_granted('STUDYAREA_OWNER', studyArea) %}
          <th scope="col">{{ 'form.edit'|trans }}</th>
          <th scope="col">{{ 'form.remove'|trans }}</th>
        {% endif %}
      </tr>
      </thead>
      <tbody>
      {% for relationType in relationTypes %}
        <tr>
          <td>{{ relationType.name }}</td>
          {% if is_granted('STUDYAREA_OWNER', studyArea) %}
            {% from 'concept/list.html.twig' import linkDisabledWhenFrozen %}
            {{ linkDisabledWhenFrozen('app_relationtype_edit', {'relationType': relationType.id}, 'form.edit') }}
            {{ linkDisabledWhenFrozen('app_relationtype_remove', {'relationType': relationType.id}, 'form.remove') }}
          {% endif %}
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
