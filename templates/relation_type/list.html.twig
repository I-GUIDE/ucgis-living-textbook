{% extends 'single_column.html.twig' %}

{% block before_title %}
  {% if is_granted('STUDYAREA_OWNER', studyArea) %}
    {% from '_macro/_action_bar.html.twig' import new_bar %}
    {{ new_bar(path('app_relationtype_add')) }}
  {% endif %}
{% endblock %}

{% block title %}
  {{ 'relation-type.list-title'|trans }}
{% endblock %}

{% block content %}
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th scope="col">{{ 'relation-type.name'|trans }}</th>
        {% if is_granted('STUDYAREA_OWNER', studyArea) %}
          <th scope="col">{{ 'form.edit'|trans }}</th>
          <th scope="col">{{ 'form.remove'|trans }}</th>
        {% endif %}
      </tr>
      </thead>
      <tbody>
      {% for relationType in relationTypes %}
        <tr>
          <td>{{ relationType.name }}</td>
          {% if is_granted('STUDYAREA_OWNER', studyArea) %}
            <td><a
                  href="{{ path('app_relationtype_edit', {'relationType': relationType.id}) }}">{{ 'form.edit'|trans }}</a>
            </td>
            <td><a
                  href="{{ path('app_relationtype_remove', {'relationType': relationType.id}) }}">{{ 'form.remove'|trans }}</a>
            </td>
          {% endif %}
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
