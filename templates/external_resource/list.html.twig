{% extends 'single_column.html.twig' %}

{% block before_title %}
  {% if is_granted('STUDYAREA_EDIT', studyArea) %}
    {% import '_macro/_action_buttons.html.twig' as buttons %}
    {{ buttons.header() }}
    {{ buttons.progress_button() }}
    {{ buttons.add_button(path('app_externalresource_add'), _twigStudyArea.isFrozen, 'study-area.frozen'|trans) }}
    {{ buttons.footer() }}
  {% endif %}
{% endblock %}

{% block title %}
  {{ 'external-resource.list-title'|trans }}
{% endblock %}

{% block content %}
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th scope="col">{{ 'external-resource.title'|trans }}</th>
        <th scope="col">{{ 'external-resource.url'|trans }}</th>
        {% if is_granted('STUDYAREA_EDIT', studyArea) %}
          <th scope="col">{{ 'form.edit'|trans }}</th>
          <th scope="col">{{ 'form.remove'|trans }}</th>
        {% endif %}
      </tr>
      </thead>
      <tbody>
      {% for externalResource in externalResources %}
        <tr>
          <td>{{ externalResource.title }}</td>
          <td>
            {% if externalResource.url is not empty %}
              <a href="{{ externalResource.url }}" target="_blank">{{ externalResource.url }}</a>
            {% else %}
              {{ 'external-resource.no-url'|trans }}
            {% endif %}
          </td>
          {% if is_granted('STUDYAREA_EDIT', studyArea) %}
            {% from 'concept/list.html.twig' import linkDisabledWhenFrozen %}
            {{ linkDisabledWhenFrozen('app_externalresource_edit', {'externalResource': externalResource.id}, 'form.edit') }}
            {{ linkDisabledWhenFrozen('app_externalresource_remove', {'externalResource': externalResource.id}, 'form.remove') }}
          {% endif %}
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
