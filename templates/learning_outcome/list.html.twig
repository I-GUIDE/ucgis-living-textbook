{% extends 'single_column.html.twig' %}

{% block before_title %}
  {% if is_granted('STUDYAREA_EDIT', studyArea) %}
    {% import '_macro/_action_buttons.html.twig' as buttons %}
    {{ buttons.header() }}
    {{ buttons.progress_button() }}
    {{ buttons.add_button(path('app_learningoutcome_add'), _twigStudyArea.isFrozen ? 'study-area.frozen'|trans : '') }}
    {{ buttons.footer() }}
  {% endif %}
{% endblock %}

{% block title %}
  {{ 'learning-outcome.list-title'|trans }}
{% endblock %}

{% block content %}
  {% import '_macro/_action_buttons.html.twig' as buttons %}
  <table id="learning-outcome-table" class="table table-hover table-datatable table-bordered">
    <thead>
    <tr>
      <th scope="col">{{ 'learning-outcome.number'|trans }}</th>
      <th scope="col">{{ 'learning-outcome.name'|trans }}</th>
      <th scope="col" class="actions">{{ 'form.actions'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for learningOutcome in learningOutcomes %}
      <tr>
        <td>{{ learningOutcome.number }}</td>
        <td>{{ learningOutcome.name }}</td>
        <td class="actions">
          {{ buttons.show_button(path('app_learningoutcome_show', {'learningOutcome': learningOutcome.id})) }}
          {% if is_granted('STUDYAREA_EDIT', studyArea) %}
            {{ buttons.edit_button_disabled_when_frozen(path('app_learningoutcome_edit', {'learningOutcome': learningOutcome.id})) }}
            {{ buttons.remove_button_disabled_when_frozen(path('app_learningoutcome_remove', {'learningOutcome': learningOutcome.id})) }}
          {% endif %}
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endblock %}

{% block javascripts_bottom %}
  {{ dataTable('learning-outcome-table', {
    columnDefs: [{ searchable: false, orderable: false, targets: -1 }]
  }) }}
{% endblock %}
