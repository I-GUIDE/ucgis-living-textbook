{% extends 'single_column.html.twig' %}

{% block before_title %}
  {% if is_granted('STUDYAREA_OWNER', studyArea) %}
    {% from '_macro/_action_bar.html.twig' import new_bar_with_progress %}
    {{ new_bar_with_progress(path('app_learningoutcome_add')) }}
  {% endif %}
{% endblock %}

{% block title %}
  {{ 'learning-outcome.list-title'|trans }}
{% endblock %}

{% block content %}
  <table class="table">
    <thead>
    <tr>
      <th scope="col">{{ 'learning-outcome.number'|trans }}</th>
      <th scope="col">{{ 'learning-outcome.name'|trans }}</th>
      <th scope="col">{{ 'form.show'|trans }}</th>
      {% if is_granted('STUDYAREA_OWNER', studyArea) %}
        <th scope="col">{{ 'form.edit'|trans }}</th>
        <th scope="col">{{ 'form.remove'|trans }}</th>
      {% endif %}
    </tr>
    </thead>
    <tbody>
    {% for learningOutcome in learningOutcomes %}
      <tr>
        <td>{{ learningOutcome.number }}</td>
        <td>{{ learningOutcome.name }}</td>
        <td><a href="{{ path('app_learningoutcome_show', {'learningOutcome': learningOutcome.id}) }}">{{ 'form.show'|trans }}</a></td>
        {% if is_granted('STUDYAREA_OWNER', studyArea) %}
          <td><a href="{{ path('app_learningoutcome_edit', {'learningOutcome': learningOutcome.id}) }}">{{ 'form.edit'|trans }}</a></td>
          <td><a href="{{ path('app_learningoutcome_remove', {'learningOutcome': learningOutcome.id}) }}">{{ 'form.remove'|trans }}</a></td>
        {% endif %}
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endblock %}
