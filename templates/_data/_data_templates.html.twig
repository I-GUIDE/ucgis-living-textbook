{% block data_display_relations %}
  <h2>{{ title }}</h2>
  <ul>
    {% for relation in relations %}
      <li>{{ relation.source.name }} <i>{{ relation.relationType.name|lower }}</i> {{ relation.target.name }}</li>
    {% endfor %}
  </ul>
{% endblock %}

