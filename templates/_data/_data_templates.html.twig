{% block data_display_block %}
  {% if data.hasData %}
    {% if title is defined %}<h3>{{ title }}</h3>{% endif %}
    {{ data.text|striptags(allowed_ckeditor_tags)|raw }}
  {% endif %}
{% endblock %}

{% macro data_introduction(data) %}
  {{ block('data_display_block') }}
{% endmacro %}

