{% macro data_external_resources(data) %}
  {% if data|length > 0 %}
    <h2>{{ 'concept.external-resources'|trans }}</h2>
    <ul>
      {% for example in data %}
        <li><a href="{{ example.url }}" class="no-block" target="_blank">{{ example.title }}</a><br>{{ example.description }}</li>
      {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}

