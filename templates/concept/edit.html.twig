{% extends 'single_column.html.twig' %}

{% block before_title %}
  {% import '_macro/_action_buttons.html.twig' as buttons %}
  {{ buttons.header() }}
  {{ buttons.show_button(path('app_concept_show', {'concept': concept.id})) }}
  {{ buttons.list_button(path('app_concept_list')) }}
  {{ buttons.footer() }}
{% endblock %}

{% block title %}
  {{ 'concept.edit-title'|trans({'%item%': concept.name}) }}
{% endblock %}

{% block content %}
  {{ form(form) }}
{% endblock %}
