{% extends 'single_column.html.twig' %}
{% import '_macro/_action_bar.html.twig' as macros %}
{% import '_data/_data_templates.html.twig' as data %}

{% block before_title %}
  {{ macros.action_bar(
    path('app_concept_edit', {'concept': concept.id}),
    false,
    path('app_concept_list')
  ) }}
{% endblock %}

{% block title %}
  {{ concept.name  }}
{% endblock %}

{% block content %}
  {{ data.data_introduction(concept.introduction) }}
  {{ data.data_learning_outcomes(concept.learningOutcomes) }}
  {{ data.data_theory_explanation(concept.theoryExplanation) }}
  {{ data.data_how_to(concept.howTo) }}
  {{ data.data_examples(concept.examples) }}
  {{ data.data_external_resources(concept.externalResources.resources) }}
  {{ data.data_self_assessment(concept.selfAssessment) }}
  {{ data.data_relations(concept.relations) }}
  {{ data.data_indirect_relations(concept.indirectRelations) }}
{% endblock %}
